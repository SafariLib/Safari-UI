{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "types",
        "removeComments": false,
        "sourceMap": true,
        "outDir": "lib",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "lib",
        "node_modules",
        "src/**/*.test.tsx",
        "src/**/*.test.ts",
        "jest.config.ts",
        ".storybook/**/*.ts",
        ".storybook/**/*.tsx",
    ]
}